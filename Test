// --- STYLES & THEME ---
const colors = {
  black: "#0A0A0F",
  violet: "#A020F0",
  pink: "#FF00FF",
  lavender: "#E6E6FA",
};

// --- 3D COMPONENTS ---
function FloatingShards() {
  const shards = useMemo(() => {
    return Array.from({ length: 40 }).map(() => ({
      position: [
        (Math.random() - 0.5) * 20,
        (Math.random() - 0.5) * 20,
        (Math.random() - 0.5) * 10
      ],
      rotation: [Math.random() * Math.PI, Math.random() * Math.PI, 0],
      speed: Math.random() * 0.2 + 0.1
    }));
  }, []);

  return (
    <group>
      {shards.map((s, i) => (
        <Float key={i} speed={s.speed} rotationIntensity={2} floatIntensity={2}>
          <mesh position={s.position} rotation={s.rotation}>
            <octahedronGeometry args={[0.2, 0]} />
            <meshStandardMaterial 
              color={colors.violet} 
              emissive={colors.violet} 
              emissiveIntensity={2} 
              transparent 
              opacity={0.6} 
            />
          </mesh>
        </Float>
      ))}
    </group>
  );
}

function Scene() {
  return (
    <>
      <color attach="background" args={[colors.black]} />
      <fog attach="fog" args={[colors.black, 5, 15]} />
      <ambientLight intensity={0.5} />
      <pointLight position={[10, 10, 10]} color={colors.pink} intensity={2} />
      <pointLight position={[-10, -10, -5]} color={colors.violet} intensity={2} />
      <Stars radius={100} depth={50} count={5000} factor={4} saturation={0} fade speed={1} />
      <FloatingShards />
      <Float speed={1.5} rotationIntensity={0.5} floatIntensity={0.5}>
        <mesh position={[0, 0, -2]}>
          <torusKnotGeometry args={[1, 0.3, 128, 16]} />
          <MeshDistortMaterial 
            color={colors.violet} 
            speed={2} 
            distort={0.4} 
            roughness={0} 
            metalness={1}
            emissive={colors.violet}
            emissiveIntensity={0.5}
          />
        </mesh>
      </Float>
    </>
  );
}

// --- UI COMPONENTS ---

const GlowingButton = ({ children, primary = true, className = "" }) => (
  <button className={`px-8 py-3 rounded-full font-bold uppercase tracking-widest transition-all duration-300 transform hover:scale-105 active:scale-95 flex items-center gap-2 group ${
