    >
      {title}
    </motion.h2>
    <div className="h-1 w-24 bg-gradient-to-r from-purple-600 to-pink-600 mx-auto rounded-full" />
    {subtitle && <p className="mt-4 text-purple-300/80 uppercase tracking-widest text-sm">{subtitle}</p>}
  </div>
);

